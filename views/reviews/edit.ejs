<% include ../partials/header %>
<div class="row justify-content-center my-5">
  <div class="col-md-12 text-center">
    <h1 class="h3 mb-3 font-weight-normal">Change Review</h1>
  </div>
  <div class="col-md-8">
    <form
      action="/campgrounds/<%= campground_slug %>/reviews/<%= review._id %>?_method=PUT"
      method="POST"
    >
      <div class="form-group row justify-content-between">
        <label class="my-2 mx-3" for="rating">Leave a rating:</label>
        <fieldset class="starability-basic" id="rating">
          <input type="radio" id="first-rate1" name="review[rating]" value="1"
          <% if (review.rating === 1) { %> checked <% } %> />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2"
          <% if (review.rating === 2) { %> checked <% } %> />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3"
          <% if (review.rating === 3) { %> checked <% } %> />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4"
          <% if (review.rating === 4) { %> checked <% } %> />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5"
          <% if (review.rating === 5) { %> checked <% } %> />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="form-group">
        <textarea class="form-control" type="text" name="review[text]" rows="5"><%= review.text %></textarea
        >
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-block">Submit a Review</button>
      </div>
    </form>
    <a href="/campgrounds/<%= campground_slug %>">Go Back</a>
  </div>
</div>
<% include ../partials/footer %>
