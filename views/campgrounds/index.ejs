<% include ../partials/header %>

<header class="jumbotron">
  <div class="container">
    <h1><span class="glyphicon glyphicon-tent"></span> Welcome To YelpCamp!</h1>
    <p>View our hand-picked campgrounds from all over the world</p>
    <p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new"
        >Add a new campground</a
      >
    </p>
  </div>
</header>

<div class="">
  <div class="my-5">
    <h3>Our Most Popular Campgrounds!</h3>
  </div>
  <div class="card-deck">
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-sm-6 col-lg-4 col-xl-3 px-0 mb-4">
      <div class="card">
        <img
          src="<%= campground.image %>"
          class="card-img-top"
          alt="<%= campground.name %>"
        />
        <div class="card-body text-center">
          <h5 class="card-title"><%= campground.name %></h5>
          <div>
            <span class="badge badge-secondary m-2"
              ><i class="fas fa-thumbs-up"></i> <%= campground.likes.length
              %></span
            >
          </div>
          <a href="/campgrounds/<%=campground.slug %>" class="btn btn-primary"
            >More Info</a
          >
        </div>
      </div>
    </div>

    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
